{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".ts",
                    ".js",
                    ".json"
                ]
            }
        },
        "import/extensions": [
            ".js",
            ".ts"
        ]
    },
    "rules": {
      "no-underscore-dangle": ["error", {"allow": ["_id"]}],
      "consistent-return": "off",
      "no-unused-vars": "off",
      "import/prefer-default-export": "off",
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": "warn",
      "no-unused-expressions": ["error", { "allowTernary": true }],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ]
    },
}